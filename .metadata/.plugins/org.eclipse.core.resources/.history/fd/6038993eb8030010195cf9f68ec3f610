package com.pm;

public class Ex02 {

	public static void main(String[] args) {
		int[] arr1 = {-2,-1,0,1,2};
		
		try {
			for (int i = 0; i < arr1.length; i++) {
				System.out.println(0/arr1[i]);
			}//0을0으로 나누는 순간 에러 발생
			
		} catch (java.lang.ArithmeticException e) { //에러 발생시 나머지 반복문 실행 X
			System.out.println(e +"에러 발생");
		}

	}
}
